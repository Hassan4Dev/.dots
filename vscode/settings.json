{
  "workbench.colorCustomizations": {},

  // Workbench
  "workbench.settings.editor": "json",
  "workbench.panel.defaultLocation": "right",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Minimal Theme",
  "workbench.iconTheme": "catppuccin-latte",
  "workbench.activityBar.location": "hidden",
  "workbench.tips.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.indent": 10,
  "workbench.statusBar.visible": false,

  // Windows
  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "none",
  "window.zoomLevel": 0.8,
  "window.menuStyle": "custom",
  "window.customTitleBarVisibility": "never",
  "window.titleBarStyle": "native",
  "window.density.editorTabHeight": "compact",

  // Editor Core Settings
  "editor.cursorSurroundingLines": 20,
  "editor.linkedEditing": false,
  "editor.lineNumbers": "relative",
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.defaultColorDecorators": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.stickyScroll.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.renderLineHighlight": "none",
  "editor.inlayHints.enabled": "on",
  "editor.inlayHints.fontSize": 10,
  "editor.lineHeight": 2,
  "editor.fontSize": 15,
  "editor.fontLigatures": false,
  "editor.snippetSuggestions": "none",
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  "typescript.referencesCodeLens.enabled": true,
  "scm.diffDecorationsGutterWidth": 1,
  "scm.diffDecorationsGutterVisibility": "hover",

  // Font Family Settings
  "editor.fontFamily": "Cascadia Code, monospace",
  "editor.inlineSuggest.fontFamily": "Cascadia Code, monospace",
  "terminal.integrated.fontFamily": "Cascadia Code, monospace",
  "markdown.preview.fontFamily": "Lexend",
  "editor.codeLensFontFamily": "Lexend",
  "editor.inlayHints.fontFamily": "Lexend",
  "errorLens.fontFamily": "Lexend",
  "gitlens.blame.fontFamily": "Lexend",
  "gitlens.currentLine.fontFamily": "Lexend",
  "scm.inputFontFamily": "Lexend",

  // Files and Explorer Settings
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.trimTrailingWhitespace": true,
  "breadcrumbs.enabled": false,
  "breadcrumbs.filePath": "off",

  // Terminal Settings
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },

  // Language-specific Settings
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "emmet.showExpandedAbbreviation": "never",

  // Diff Editor Settings
  "diffEditor.ignoreTrimWhitespace": false,

  // ============ VIM SETTINGS ============
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.gdefault": true,
  "vim.ignorecase": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["Q"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["'"],
      "commands": ["editor.toggleFold"]
    },
    {
      "before": ["<Tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-Tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "r", "s"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["workbench.action.focusActiveEditorGroup"]
    },
    {
      "before": ["<leader>", "F"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["<leader>", "i"],
      "commands": ["typescript.removeUnusedImports"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": ["workbench.view.extensions"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", ";"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "r", "w"],
      "after": [":", "%", "s", "/"]
    },
    {
      "before": ["<leader>", "r", "r"],
      "commands": ["workbench.action.reloadWindow"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["<leader>", "l", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "l", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["<leader>", "l", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "l", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "r", "w"],
      "after": [":", "'", "<", ",", "'", ">", "s", "/", "<C-r>", "0", "/"]
    }
  ],

  // Security and Trust Settings
  "security.workspace.trust.untrustedFiles": "open",

  // Custom CSS and Extensions
  "vscode_custom_css.imports": [
    "file:///C:/Users/hassa/.vscode/vscode-custom.css",
    "file:///C:/Users/hassa/.vscode/vscode-list-resize-script.js"
  ],

  "redhat.telemetry.enabled": false,
  "typescript.tsserver.log": "off",
  "biome.suggestInstallingGlobally": false,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "codeium.enableCodeLens": false,

  // ======== VISUAL CHANGES ========
  // Hide title bar
  "custom-ui-style.electron": {
    "frame": false
  },

  // Custom icons
  "catppuccin-icons.associations.folders": {
    "mailer": "folder_messages",
    "trpc-server": "folder_proto",
    "trpc-client": "folder_proto"
  },

  // Language-specific formatters
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  }
}
